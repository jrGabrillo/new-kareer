<?xml version='1.0' encoding='utf-8'?>
<widget id="rnr.Kareer.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="GooglePlus">
        <param name="android-package" value="nl.xservices.plugins.GooglePlus" />
        <param name="onload" value="true" />
    </feature>
    <access origin="https://accounts.google.com/*" />
    <name>Kareer</name>
    <description>
    	Tinder for jobs
    </description>
    <author email="info@rnrdigitalconsultancy.com" href="http://rnrdigitalconsultancy.com">
        RNR Digital Consultancy
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon density="ldpi" src="www/assets/img/icons/icon.png" />
    <icon density="mdpi" src="www/assets/img/icons/icon.png" />
    <icon density="hdpi" src="www/assets/img/icons/icon.png" />
    <icon density="xhdpi" src="www/assets/img/icons/icon.png" />
    <icon density="xxhdpi" src="www/assets/img/icons/icon.png" />
    <icon density="xxxhdpi" src="www/assets/img/icons/icon.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
